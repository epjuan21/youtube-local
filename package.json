{
  "name": "youtube-local",
  "version": "1.0.0",
  "description": "Plataforma de videos local estilo YouTube",
  "main": "src/main/index.js",
  "scripts": {
    "dev:vite": "vite --config vite.config.mjs",
    "dev:electron": "cross-env ELECTRON_RUN_AS_NODE= electron .",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron:start\"",
    "dev:electron:start": "node scripts/wait-and-start.js",
    "build": "vite build --config vite.config.mjs",
    "build:electron": "electron-builder",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "electron",
    "react",
    "youtube",
    "videos"
  ],
  "author": "Juan Fernando Ramirez",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "better-sqlite3": "^12.5.0",
    "chokidar": "^5.0.0",
    "electron-builder": "^26.0.12",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^2.2.5"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^5.0.0",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  }
}
